#coding: utf-8
<% provide(:title, 'Sign up') %>
<h1></h1>

<div class="row">
	<div class="span4 offset4">
		<%= form_for(@user) do |f| %>
		<%= render 'shared/error_messages' %>

		<%= f.label :用户名 %>
		<%= f.text_field :name %>

		<%= f.label :邮箱 %>
		<%= f.text_field :email %>

		<%= f.label :输入密码 %>
		<%= f.password_field :password %>

		<%= f.label :确认密码 %>
		<%= f.password_field :password_confirmation %><br>

		<%= f.submit "注册", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>