<% if signed_in? %>
<% provide(:title, @current_user.name) %>
<div class="row">

	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
	</aside>

	<div class="span8">
		<h3>动态</h3>
		<%= render 'shared/feed' %>
	</div>

</div>
<% else %>
<div class="center hero-unit no-radius">
	<%= image_tag("bigtweet.jpg",class: "profile img-circle loading", width: "220") %>
	<h1>Enjoy Solitude</h1>
	<h2>lafmad's twitter</h2>
	<a class="btn btn-primary  btn-large" data-toggle="modal" href="#signupModal" >SignUp</a>
</div>
<%= render 'shared/sign_up_modal' %>
<% end %>