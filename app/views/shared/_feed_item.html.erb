<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user,size: 52), feed_item.user %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content"><%= feed_item.content %></span>
	<span class="timestamp">
		发表于 <%= feed_item.created_at %>距今已有<%= time_ago_in_words(feed_item.created_at) %>	<strong><%= feed_item.comments.count %>条</strong><%= link_to "回复",feed_item %>
	</span>

	<% if current_user?(feed_item.user) %>
	<%= link_to "删除", feed_item, method: :delete,
	data: { confirm: "You sure?" },
	title: feed_item.content %>
	<% end %>
</li>